<div class="w-full p-1  bg-white border border-gray-200 rounded-lg shadow sm:p-8 dark:bg-gray-800 dark:border-gray-700 flex justify-center">
   <div class="w-full">
        <h5 class="mb-1 text-xl font-semibold tracking-tight text-gray-900 dark:text-white">Fuente Financiadora</h5>
        <p class="mb-1 font-normal text-gray-500 dark:text-gray-400">Información</p>
            <table class="table-auto w-full ">
                <tbody>
                    <%= render "proyectos/tr", titulo:'Institución, Gobierno o Empresa:', valor: @fuente.nomfuente  %>
                    <%= render "proyectos/tr", titulo:'Nacionalidad:', valor: @fuente.nacionalidad.nomnacionalidad %>
                    <%= render "proyectos/tr", titulo:'País/Estado:', valor: @fuente.lugar.nomlugar %>
                    <%= render "proyectos/tr", titulo:'Nombre Contacto Contraparte:', valor: @fuente.nomcontacto %>
                    <%= render "proyectos/tr", titulo:'Correo Electrónico:', valor: @fuente.emailcontacto %>
                </tbody>
            </table>       

            <% if @proyecto.etapas.last.tevento.clave == 'CAP' || current_usuario.cuenta.rol.clave == 'EL' || @proyecto.enlaces.last.enevento.clave == 'CORR' %> 
                        <div class="md:flex md:items-center mb-3 justify-end mt-5">
                            <%= link_to edit_fuente_path(@fuente), 
                                        class:'text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center mr-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800' do %>
                                    Editar Información
                            <% end %>
                        </div>
            <% end %>
    </div>        
</div>            