
    <div class='w-full' data-controller="fuente">
                <div class="md:flex md:items-center mb-3">
                        <div class="md:w-1/5">
                            <div class='block  md:text-right mb-1 md:mb-0 pr-4'>
                                Fuente Financiadora
                            </div>
                        </div>
                        <div class="md:w-3/5">
                                <div class='bg-gray-100 appearance-none border-2 border-gray-200 rounded w-full py-2 px-2 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="inline-full-name'>
                                    <%= @fuente.nomfuente %>
                                </div>
                        </div>
                </div>
                <div class="md:flex md:items-center mb-3">
                        <div class="md:w-1/5">
                            <div class='block  md:text-right mb-1 md:mb-0 pr-4'>
                                Nacionalidad:
                            </div>
                        </div>
                        <div class="md:w-3/5">
                            <div class='bg-gray-100 appearance-none border-2 border-gray-200 rounded w-full py-2 px-2 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="inline-full-name'>
                                <%= @fuente.nacionalidad.nomnacionalidad %>
                            </div> 
                        </div>
            </div>
            <div class="md:flex md:items-center mb-3">
                        <div class="md:w-1/5">
                            <div class='block  md:text-right mb-1 md:mb-0 pr-4'>
                                País/Estado:
                            </div>
                        </div>
                        <div class="md:w-3/5">
                            <div class='bg-gray-100 appearance-none border-2 border-gray-200 rounded w-full py-2 px-2 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="inline-full-name'>
                                    <%= @fuente.lugar.nomlugar %>
                            </div> 
                        </div>
            </div>
            <div class="md:flex md:items-center mb-3">
                        <div class="md:w-1/5">
                            <div class='block  md:text-right mb-1 md:mb-0 pr-4'>
                                Nombre del Contacto:
                            </div>
                        </div>
                        <div class="md:w-3/5">
                        <div class='bg-gray-100 appearance-none border-2 border-gray-200 rounded w-full py-2 px-2 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="inline-full-name'>
                                <%= @fuente.nomcontacto %>
                        </div> 
                        </div>
            </div>
            <div class="md:flex md:items-center mb-3">
                        <div class="md:w-1/5">
                            <div class='block  md:text-right mb-1 md:mb-0 pr-4'>
                                E-mail del Contacto:
                            </div>
                        </div>
                        <div class="md:w-3/5">
                            <div class='bg-gray-100 appearance-none border-2 border-gray-200 rounded w-full py-2 px-2 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="inline-full-name'>
                                <%= @fuente.emailcontacto %>
                            </div>
                        </div>
            </div>
                <% if @proyecto.etapas.last.tevento.clave == 'CAP' %> 
                        <div class="md:flex md:items-center mb-3 justify-end mt-5">
                            <%= link_to edit_fuente_path(@fuente), 
                                        class:'text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center mr-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800' do %>
                                    Editar Información
                            <% end %>
                        </div>
               <% end %>                        
    </div>
