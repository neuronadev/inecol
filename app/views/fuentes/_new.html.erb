<%= form_with model:@fuente, remote:true do |form| %>
    <div data-controller="fuente">
            <%= form.hidden_field :proyecto_id, value:@proyecto.id %>

            <div class="md:flex md:items-center mb-3">
                    <div class="md:w-1/5">
                        <%= form.label :nomfuente, 'Fuente Financiadora:', class:'block  md:text-right mb-1 md:mb-0 pr-4', for:'inline-full-name' %>
                    </div>
                    <div class="md:w-3/5">
                    <%= form.text_field :nomfuente, class:'bg-gray-100 appearance-none border-2 border-gray-200 rounded w-full py-2 px-2 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="inline-full-name' %>
                    </div>
            </div>
            <div class="md:flex md:items-center mb-3">
                    <div class="md:w-1/5">
                        <%= form.label :nacionalidad_id, 'Nacionalidad:', class:'block  md:text-right mb-1 md:mb-0 pr-4', for:'inline-full-name' %>
                    </div>
                    <div class="md:w-2/5">
                        <%= form.select :nacionalidad_id,
                                                Nacionalidad.all.map{|item| [item.nomnacionalidad, item.id]},
                                                {prompt: '-- Seleccione una opción --'},
                                                {class:'bg-gray-100 appearance-none border-2 border-gray-200 rounded w-full py-2 px-2 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="inline-full-name', 
                                                        'data-action':'change->fuente#onNacionalidad'
                                                }
                        %>   
                    </div>
        </div>
        <div class="md:flex md:items-center mb-3">
                    <div class="md:w-1/5">
                        <%= form.label :lugar_id, 'País/Estado:', class:'block  md:text-right mb-1 md:mb-0 pr-4', for:'inline-full-name' %>
                    </div>
                    <div class="md:w-2/5">
                        <%= form.select :lugar_id,
                                                Lugar.where(tiponac:'NAC').all.map{|item| [item.nomlugar, item.id]},
                                                {prompt: '-- Seleccione una opción --'},
                                                {class:'bg-gray-100 appearance-none border-2 border-gray-200 rounded w-full py-2 px-2 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="inline-full-name'}

                        %>   
                    </div>
        </div>
        <div class="md:flex md:items-center mb-3">
                    <div class="md:w-1/5">
                        <%= form.label :nomcontacto, 'Nombre del Contacto:', class:'block  md:text-right mb-1 md:mb-0 pr-4', for:'inline-full-name' %>
                    </div>
                    <div class="md:w-2/5">
                    <%= form.text_field :nomcontacto, class:'bg-gray-100 appearance-none border-2 border-gray-200 rounded w-full py-2 px-2 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="inline-full-name' %>
                    </div>
            </div>
            <div class="md:flex md:items-center mb-3">
                    <div class="md:w-1/5">
                        <%= form.label :emailcontacto, 'E-mail del Contacto:', class:'block  md:text-right mb-1 md:mb-0 pr-4', for:'inline-full-name' %>
                    </div>
                    <div class="md:w-2/5">
                    <%= form.text_field :emailcontacto, class:'bg-gray-100 appearance-none border-2 border-gray-200 rounded w-full py-2 px-2 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="inline-full-name' %>
                    </div>
            </div>
            <div class="md:flex md:items-center mb-3">
                    <div class="md:w-1/5">
                            <%= form.submit %>
                    </div>
            </div>        
    </div>
<% end %>

