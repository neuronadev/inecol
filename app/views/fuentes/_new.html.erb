        <% flash.each do |type, msg| %>
            <% if type == 'error' %> 
                <div class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
                        <%= msg %>
                </div>
            <% end %>   
        <% end %>
<%= form_with model:@fuente do |form| %>
    <div data-controller="fuente">

         <% if controller.action_name == 'new' || controller.action_name == 'create' %> 
               <%= form.hidden_field :proyecto_id, value:@proyecto.id %>
         <% end %>      


            <div class="md:flex md:items-center mb-3">
                    <div class="md:w-1/5">
                        <%= form.label :nomfuente, 'Institución, Gobierno o Empresa:', class:'block font-semibold md:text-right mb-1 md:mb-0 pr-4', for:'inline-full-name' %>
                    </div>
                    <div class="md:w-3/5">
                    <%= form.text_field :nomfuente, class:' appearance-none border-2 border-gray-200 rounded w-full py-2 px-2 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="inline-full-name' %>
                    </div>
            </div>
            <div class="md:flex md:items-center mb-3">
                    <div class="md:w-1/5">
                        <%= form.label :nacionalidad_id, 'Origen de la Institución, Gobierno o Empresa:', class:'block font-semibold md:text-right mb-1 md:mb-0 pr-4', for:'inline-full-name' %>
                    </div>
                    <div class="md:w-2/5">
                        <%= form.select :nacionalidad_id,
                                                Nacionalidad.all.map{|item| [item.nomnacionalidad, item.id]},
                                                {prompt: '-- Seleccione una opción --'},
                                                {class:' appearance-none border-2 border-gray-200 rounded w-full py-2 px-2 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="inline-full-name', 
                                                        'data-action':'change->fuente#onNacionalidad'
                                                }
                        %>   
                    </div>
        </div>
        <div class="md:flex md:items-center mb-3">
                    <div class="md:w-1/5">
                        <%= form.label :lugar_id, 'País/Estado:', class:'block font-semibold md:text-right mb-1 md:mb-0 pr-4', for:'inline-full-name' %>
                    </div>
                    <div class="md:w-2/5">
                        <%= form.select :lugar_id,
                                                Lugar.where(tiponac:'NAC').all.map{|item| [item.nomlugar, item.id]},
                                                {prompt: '-- Seleccione una opción --'},
                                                {class:' appearance-none border-2 border-gray-200 rounded w-full py-2 px-2 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="inline-full-name'}

                        %>   
                    </div>
        </div>
        <div class="md:flex md:items-center mb-3">
                    <div class="md:w-1/5">
                        <%= form.label :nomcontacto, 'Nombre Contacto Contraparte:', class:'block font-semibold md:text-right mb-1 md:mb-0 pr-4', for:'inline-full-name' %>
                    </div>
                    <div class="md:w-2/5">
                    <%= form.text_field :nomcontacto, class:' appearance-none border-2 border-gray-200 rounded w-full py-2 px-2 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="inline-full-name' %>
                    </div>
            </div>
            <div class="md:flex md:items-center mb-3">
                    <div class="md:w-1/5">
                        <%= form.label :emailcontacto, 'Correo Electrónico:', class:'block font-semibold md:text-right mb-1 md:mb-0 pr-4', for:'inline-full-name' %>
                    </div>
                    <div class="md:w-2/5">
                    <%= form.text_field :emailcontacto, class:' appearance-none border-2 border-gray-200 rounded w-full py-2 px-2 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="inline-full-name' %>
                    </div>
            </div>
            <div class="md:flex md:items-center mb-3 justify-end border-t-2 border-gray-100 p-2">
            <% if controller.action_name == 'new' || controller.action_name == 'create'  %>
                <button type="submit" class="text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800"
                        data-turbo-frame= 'py_content_action'
                       >
                        <span class="ml-2">Guardar</span>
                        <%= inline_svg_tag 'svg/disco.svg', class:"ml-2" %>
                </button>
            <% end %>
            <% if controller.action_name == 'edit' || controller.action_name == 'update' %>
                <%= link_to fuente_path(@fuente), 
                                    class:"mr-3 text-white bg-gray-500 hover:bg-gray-800 focus:ring-4 focus:outline-none focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:bg-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-800",
