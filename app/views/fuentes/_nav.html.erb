<div class="flex">
  <div class="flex">
      <%  if session[:step] == 1 %>
            <div class='text-blue-600 font-semibold text-base'><%= link_to 'Atras', proyecto_path(@proyecto.id) %></div>
      <% end %>
      <%  if session[:step] == 2 %>
            <div class='text-blue-600 font-semibold text-base'><%= link_to 'Atras', proyecto_path(@fuente.proyecto_id) %></div>
            <div class='text-gray-300 ml-1 mr-1'>|</div>
            <div class='text-blue-600 font-semibold text-base'><%= link_to 'Siguiente', new_participante_path %></div>
      <% end %>
      <%  if session[:step] == 3 %>
        <div class='text-blue-600 font-semibold text-base'><%= link_to 'Atras', proyecto_path(@fuente.proyecto_id) %></div>
        <div class='text-gray-300 ml-1 mr-1'>|</div>
        <div class='text-blue-600 font-semibold text-base'><%= link_to 'Siguiente', participante_path(@fuente.proyecto.participante.id) %></div>
      <% end %>

      <%  if session[:step] == 4 || session[:step] == 5 || session[:step] == 6 %>
        <div class='text-blue-600 font-semibold text-base'><%= link_to 'Atras', proyecto_path(@fuente.proyecto_id) %></div>
        <div class='text-gray-300 ml-1 mr-1'>|</div>
        <div class='text-blue-600 font-semibold text-base'><%= link_to 'Siguiente', participante_path(@fuente.proyecto.participante.id) %></div>
      <% end %>
  </div>
</div>  