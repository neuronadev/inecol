<div class="nested-form-wrapper flex p-1"  >
    
    <div class="border border-gray-200 w-full">
         <div class="p-5">
              <template data-nested-form-fesp-target="template" >
                  <%= f.fields_for :especies, Especie.new, child_index:'NEW_RECORD' do |especie_fields|%>
                       <%= render 'recursos/fesp_fields', f: especie_fields %>
                  <% end %>
              </template>

               <% if  controller.action_name == 'create' %> 
                         <%= f.fields_for :especies do |f_fields|%>
                                   <%= render 'recursos/fesp_fields', f: f_fields %>
                         <% end %>
               <% end %>    

                <% if controller.action_name == 'edit' %> 
                    <%= f.fields_for :especies do |especie_fields|%>
                              <%= render 'recursos/fesp_fields', f: especie_fields %>
                    <% end %>
                <% end %>    

              <div data-nested-form-fesp-target="target"></div>

              <div class="w-full flex mt-3 ">
                   <button type="button" class="inline-flex items-center px-2 py-2 bg-sky-600 hover:bg-sky-800 text-white text-sm font-medium rounded-md", data-action="nested-form-fesp#add">
                        <%= inline_svg_tag 'svg/agregar-usuario' %>
                        <div class="flex mx-1.5">Agregar Cap√≠tulo...</div>
                   </button>
              </div>
  
         </div>
     </div>    
</div>
