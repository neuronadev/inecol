<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3 text-center">
                    Cap√≠tulo
                </th>
                <th scope="col" class="px-6 py-3 text-center">
                    Monto
                </th>
            </tr>
        </thead>
        <tbody>
           <% items.each do |item|  %>
                    <tr class="bg-white border-b dark:bg-gray-900 dark:border-gray-700">
                        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                              <%= item.capitulo.nomcapitulo %>
                        </th>
                        <td class="px-6 py-4 text-center">
                              <%= item.monto %>
                        </td>
                    
                    </tr>
             <% end %>       
        </tbody>
        <tfoot class=" bg-gray-50 dark:bg-gray-700">
             <tr>
                <td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white text-right">Total</th>
                <td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white text-center"><%= total %> </td>
             </tr>
        </tfoot>
    </table>
</div>