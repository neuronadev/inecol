              <% end %>          

 
              <% if controller.action_name == 'edit' %> 
                         <%= f.fields_for :fiscales do |f_fields|%>
                                   <%= render 'recursos/ffis_fields', f: f_fields %>
                         <% end %>
               <% end %>          

              <div data-nested-form-ffis-target="target"></div>

              <div class="w-full flex mt-3 ">
