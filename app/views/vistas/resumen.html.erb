<div data-controller="etapasvalpy" class="w-full">
      <div class='flex w-full justify-center mb-2 border-b-2 border-slate-200'>
            <div class="w-9/12">  
                 <% if current_usuario.cuenta.rol.clave == 'EL' %>
                            <%= render 'vistas/util/enlace' %>  
                 <% elsif current_usuario.cuenta.rol.clave == 'CAP' %>
                            <%= render 'vistas/util/acad' %> 
                 <% else %>
                            <%= render 'vistas/util/evaluador' %> 
                 <% end %>
            
            </div>
      </div>
      
      
      <div class='flex w-full mb-2'>
           <% if current_usuario.cuenta.rol.clave == 'CAP' %>
                 <%= render 'vistas/util/pyestado', proyecto:@proyecto %>
           <% end %>   
           <% if current_usuario.cuenta.rol.clave == 'EL' %>
                 <%= render 'vistas/util/elestado', proyecto:@proyecto %>
           <% end %>      

      </div>  
      
      <%  if @total_notifica_rp > 0 && @proyecto.persona_id == current_usuario.cuenta.persona.id   %> 
           <%= render 'proyectos/notifi_corr', notificaciones:@notifica_corr %> 
      <% end %>     
      <%  if  current_usuario.email == 'sara.sanchez@inecol.mx' &&  @total_notifica_sola > 0 %> 
               <%= render 'proyectos/notifi_el', notificaciones:@notifica_sola %> 
      <% end %>     

      <div class='flex w-full'>
      
         <div class='w-1/4'>
            <%= render 'secciones' %>
         </div>
         <div class='w-3/4'>
            <%= turbo_frame_tag "py_content_secc" do %>
               <%= render 'seccion' %>
            <% end %>

         </div>
      </div>
      <%= render 'vistas/util/modal_enviar' %>
</div>      

