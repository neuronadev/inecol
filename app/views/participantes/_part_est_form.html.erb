<div class="nested-form-wrapper flex p-1" data-new-record="<%= f.object.new_record? %>" >
     <div class="w-3/6 flex justify-center"> 
               <%= f.text_field :nombre,
                    class:'appearance-none border-1 border-gray-200 rounded w-full py-1 px-1 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500'
               %>
     </div>   
 
     <div class="w-2/12 flex justify-center">     
                    <%= f.select :nivel_id,
                         Nivel.all.map{|item| [item.nomnivel, item.id]},
                         {include_blank: true},
                         {class:'appearance-none border-1 border-gray-200 rounded w-full py-1 px-1 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500'}
                    %>   
     </div>

     <div class="w-2/12 flex justify-center items-center">
           <button type="button" data-action="nested-form-est#remove">Eliminar</button>
     </div>

     <%= f.hidden_field :_destroy %>       
</div>