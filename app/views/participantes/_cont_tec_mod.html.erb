<div style="display: flex; justify-content: center; height:200px; overflow-y: scroll; min-height: 100px; width:100%" data-controller="ptecnico" >
     <div style="display: flex; flex-direction: column; width: 80%;">

            <template data-ptecnico-target="ttecnico" >
                <%= form.fields_for :ptecnicos, Ptecnico.new, child_index:'NEW_TEC' do |ptec_fields|%>
                     <%= render 'participantes/part_tec_form_mod', f:ptec_fields %>
                 <% end %>
            </template>

           <div data-ptecnico-target="contecnico"> 

                <%= form.fields_for :ptecnicos do |ptec_fields| %>
                       <%= render 'participantes/part_tec_form_mod', f:ptec_fields  %>
                <% end %>
           </div>
 

           <div class="w-full flex mt-7 "> 
                   <button type="button" class="inline-flex items-center px-2 py-2 bg-sky-600 hover:bg-sky-800 text-white text-sm font-medium rounded-md" data-action="click->ptecnico#addItem">
                         <%= inline_svg_tag 'svg/agregar-usuario.svg' %>
                         <div class="flex mx-1.5">Agregar TÃ©cnico...</div>
                  </button>
           </div>  

          <div class="mt-5 font-semibold" style="display: flex; flex-direction: row; width: 80%;">
                    <div class="w-8/12"></div>
                    <div>Total:</div>
                    <div class="text-center w-32" id="stptec">
                         <% if controller.action_name == 'new' %> 
                              0.0 % 
                         <% end %>
                         <% if controller.action_name == 'edit' || controller.action_name == 'update' || controller.action_name == 'create' %> 
                              <%= @tec_sum.to_s %> % 
                         <% end %>
                    </div>
          </div>

     </div> 
</div>