<div class="itemrw" style="display:flex; justify-content: space-between; width:100%; margin-top: 5px;">
      <div style="display: flex; width: 50%;">
               <%= f.select :academico_id,
                         Academico.includes(:tacademico).where('tacademicos.clave':['TEC']).all.map{|item| [item.persona.nom_espacio, item.id] if item.tacademico.clave == 'TEC' },
                         {prompt: '--Seleccione un Técnico--'},
                         { 
                         data:{controller:'slim', slim_target:'field', class:'selecttect'}
                         }
               %>   
      </div>
      <div style="display: flex; width: 15%;">
               <%= f.text_field :porcentaje, 
                    class:'portec appearance-none border-1 border-gray-200 rounded w-full py-1 px-1 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500 text-center',
                    placeholder: '% de Participación',
                    data:{action:'keydown->utils#keyEnter keyup->utils#formatPorcent keyup->participan#sumaPorc' }
               %>
      </div>
      <div style="display: flex; justify-content: center;  align-items: center; width: 10%;">
              <button type="button" class="inline-flex items-center px-1 py-1 bg-red-500 hover:bg-red-800 text-white text-sm font-medium rounded-md", data-action="ptecnico#removeItem">
                    <%= inline_svg_tag 'svg/cruz.svg' %>
              </button>
      </div>
      <%= f.hidden_field :_destroy %>
</div>