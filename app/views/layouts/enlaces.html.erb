<!DOCTYPE html>
<html>
  <head>
    <title>Inecol</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "https://unpkg.com/slim-select@latest/dist/slimselect.css", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "enlace", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    
  </head>

  <body> 
     <flex class="v" style="flex: 1; height: 100vh;" data-controller="organizar" >
        <flex class="h" style="flex: 1;">
              <flex-item style="flex: 0.3;">
                    <section>
                      <div>
                            <%= render "layouts/interfaz/enlace" %>   
                      </div>
                    </section>
              </flex-item>
              <flex-resizer class="me-3"></flex-resizer>

              <flex class="v" style="flex: 2; ">
                  <flex-item class="p-3" style="flex: 1;">
                        
                           <div class="flex justify-between border-b-2 border-slate-200">
                                  <div class="flex">
                                      <div class="flex items-center"><%= image_tag "logo140.png", width:"120px" %></div>
                                  </div>   
                                  <div class="flex">
                                    <div class="flex items-center"><%= inline_svg_tag 'svg/circulo-de-usuario.svg'%></div> 
                                    <div class="ml-2 text-sm text-blue-800 flex items-center font-semibold"><span><%= current_usuario.cuenta.persona.nom_espacio %></span></div>
                                  </div>  
                            </div>   
                             
                        <%= turbo_frame_tag 'pycontent',  data:{turbo_cache:false}, class:'w-full' do %>
                                <%= yield %>
                        <% end %>
                   </flex-item>
              </flex>
        </flex>
	   </flex>
  </body>
</html>
<%= javascript_include_tag 'enlace' %>
