<div id="target_firma" class="flex items-center justify-center mt-5 w-full h-70 border-2 p-2" style="overflow-x: auto;">
   <%
        #CARGO DEL USUARIO ACTUAL.
        cargo_actual = current_usuario.cuenta.persona.cargo.tipocargo.clave
        existe_firma =  @proyecto.firmas.where(cargoeval:cargo_actual).first
  %>  
  <% 
      #firma = Firma.where(evaluador_id: current_usuario.cuenta.persona.evaluador.id, proyecto_id: @proyecto.id, firmado:true).first
  %> 
    <% if existe_firma.nil? %>
        <div  class="cursor-pointer" data-controller="firmar" data-action = "click->firmar#generar" data-firmar-proyecto-param = "<%= @proyecto.id %>">
            <%= inline_svg_tag 'svg/firma.svg' %>
            <div class="flex justify-center font-bold">Firmar</div>
        </div>  
    <% else %>
         <div>
           <div class="font-bold">  <%= existe_firma.evaluador.persona.nom_espacio %> </div>
           <div class="font-bold">Firma Electr√≥nica </div>
           <div class="w-50"> <%= existe_firma.firmasign %> </div>
         </div>  
    <% end %>    
    
