<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full text-sm" >
        <thead class="text-sm text-gray-700 bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
           <tr> 
              <th  class="p-3" >No.</th>
              <th  class="p-3"><div style="width:400px;">Nombre del proyecto</div></th>
              <th  class="p-3"><div style="width:100px;">Fondos CONACYT</div></th>
              <th  class="p-3"><div style="width:300px;">Otras agencias de financiamiento</div></th>
              <th  class="p-3"><div style="width:300px;">Vinculado a empresa</div></th>
              <th  class="p-3"><div style="width:200px;">Tipo de proyecto</div></th>
              <th  class="p-3"><div style="width:200px;">Fecha de inicio (mes/año)</div></th>
              <th  class="p-3"><div style="width:200px;">Fecha de término (mes/año)</div></th>
              <th  class="p-3"><div style="width:100px;">Porcentaje de avance</div></th>
              <th  class="p-3"><div style="width:100px;">Monto autorizado</div></th>
              <th  class="p-3"><div style="width:150px;">Monto ejercido a la fecha</div></th>
              <th  class="p-3"><div style="width:200px;">Responsable</div></th>
              <th  class="p-3"><div style="width:500px;">Comentarios</div></th>
           </tr>   
         </thead>
         <tbody>
              <% x = 1
                 @enlace.each do |e| %>
                  <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                          <td class="p-2">   
                               <%= x %>                            
                          </td>
                          <td class="p-2">                               
                               <%= e.proyecto.nombre %>
                          </td>
                          <td class="p-2">                               
                          </td>
                          <td class="p-2">                               
                          </td>
                          <td class="p-2"> 
                               <%=  e.proyecto.fuente.nomfuente if !e.proyecto.fuente.nil? %>                              
                          </td>
                          <td class="p-2">   
                                <%=  e.proyecto.clasificacion.nomclasifica %>
                          </td>
                          <td class="p-2">      
                                <%=  e.proyecto.mtoautorizado.finicio if !e.proyecto.mtoautorizado.nil? %>       
                          </td>
                          <td class="p-2">
                                <%=  e.proyecto.mtoautorizado.ftermino if !e.proyecto.mtoautorizado.nil? %>       
                          </td>
                          <td class="p-2">      
                                 <%=  e.proyecto.avances.last.porcentaje if e.proyecto.avances.any? %>                               
                          </td>
                          <td class="p-2">
                                 <%=  e.proyecto.mtoautorizado.monto if !e.proyecto.mtoautorizado.nil? %>       
                          </td>
                          <td class="p-2">
                                 <%=  e.proyecto.mtoejercidos.last.monto if e.proyecto.mtoejercidos.any? %>  
                          </td>
                          <td class="p-2">   
                               <%= e.proyecto.participante.pacademicos.where(responsable:true).first.academico.persona.nom_espacio %>                            
                          </td>
                          <td class="p-2">                               
                          </td>
                  </tr>  
              <% x += 1 
                 end %>
         </tbody>
    </table>
    <br><br>
</div>   

       