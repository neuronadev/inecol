<%= turbo_frame_tag 'pycontent', class:'w-full' do %>
    <div class="w-full text-slate-700">
      <div class="mt-3 flex align-middle border-b-2 border-slate-200 justify-between">
          <div class="flex w-full ">
               <div class="flex w-1/3"> 
                    <div><%= inline_svg_tag 'svg/adoc.svg' %></div>
                    <div class="ml-1">Evaluadores</div>
               </div>    
               <div class="flex justify-between w-1/3">     
                   <div>
                        <% if !@proyecto.validaciones.includes(:tvalidacion).where('tvalidaciones.clave':'SOLV').any? %>
                           <%= link_to new_validacion_path(:idpy=>@proyecto.id, :tval=>Tvalidacion.where(clave:'SOLV').first.id) do %>
                                <div class="flex w-full ml-1"><div><%= inline_svg_tag 'svg/evaluacion.svg' %></div> <div>Enviar a evaluación</div></div>
                            <% end %>  
                        <% else %>   
                             <div class="flex w-full ml-1">
                                <div><%= inline_svg_tag 'svg/evaluacion.svg' %></div><div class='text-gray-400 class="ml-1"'>Enviar a evaluación</div>
                             </div>   
                        <% end %>
                   </div> 
                     <% if @proyecto.enlaces.last.enevento.clave == 'DICT' %>
                             <div class="ml-1">
                                   <%= link_to dictamen_path(@proyecto.dictamen), data:{turbo_frame:'py_eval_content'} do %>
                                        <div class="flex w-full ml-1"><div><%= inline_svg_tag 'svg/controlar-gray.svg' %></div> <div class="ml-1">Ver Dictamen</div></div>
                                   <% end %>  
                              </div>
                     <% else %>
                              <div class="ml-1">
                                   <%= link_to new_dictamen_path(:idpy=>@proyecto.id), data:{turbo_frame:'py_eval_content'} do %>
                                        <div class="flex w-full ml-1"><div><%= inline_svg_tag 'svg/controlar-gray.svg' %></div> <div class="ml-1">Dictamen</div></div>
                                   <% end %>  
                              </div>
                     <% end %>    

               </div>    
          </div>
          <div class="flex w-auto">
                 <%= link_to resumen_vistas_path(:id=>@proyecto.id), class:'flex' do %>
                    <div><%= inline_svg_tag 'svg/regresar.svg' %></div>
                    <div class="ml-1 text-sm font-semibold">Regresar</div>
                 <% end %>   
          </div>
      </div>

      <%= turbo_frame_tag 'py_eval_content', class:'w-full' do %>
          <div class="mt-5">
                <%= render 'index' %>
          </div>
      <% end %> 

   </div>      
<% end %>