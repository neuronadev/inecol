<div class="flex">
      <%  if session[:step] == 3 %>
         <div class='text-blue-600 font-semibold text-base'><%= link_to 'Atras', participante_path(@proyecto.participante.id) %></div>
      <% end %>
      <%  if session[:step] == 4 %>
         <div class='text-blue-600 font-semibold text-base'><%= link_to 'Atras', participante_path(@presupuesto.proyecto.participante.id) %></div>
         <div class='text-gray-300 ml-1 mr-1'>|</div>
         <div class='text-blue-600 font-semibold text-base'><%= link_to 'Siguiente',  new_recurso_path %></div>
      <% end %>
      <%  if session[:step] == 5 || session[:step] == 6 %>
      <div class='text-blue-600 font-semibold text-base'><%= link_to 'Atras', participante_path(@presupuesto.proyecto.participante.id) %></div>
      <div class='text-gray-300 ml-1 mr-1'>|</div>
      <div class='text-blue-600 font-semibold text-base'><%= link_to 'Siguiente', recurso_path(@presupuesto.proyecto.recurso.id) %></div>
      <% end %>
</div>



