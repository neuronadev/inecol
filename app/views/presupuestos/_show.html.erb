<div class="w-full p-1  bg-white border border-gray-200 rounded-lg shadow sm:p-8 dark:bg-gray-800 dark:border-gray-700">
        <h5 class="mb-1 text-xl font-semibold tracking-tight text-gray-900 dark:text-white">Recursos Aportados</h5>
        <p class="mb-1 font-normal text-gray-500 dark:text-gray-400">Fuente Financiadora</p>
            <div class="flex w-full justify-center ">
                <div class="w-full border-b border-slate-300">
                    <table class="w-full">
                            
                            <tr>
                                <td class=" p-2 text-center font-semibold">Costo del Proyecto SIN IVA</td>
                                <td class="p-2 font-semibold text-left"><%= number_to_currency(@presupuesto.costo, :unit=>@moneda.currency + ' ') %>  </td>
                            </tr>    
                    </table>
                </div>     
            </div>    

            <div class="flex w-full justify-center">
                <div class="flex w-full  border-b border-slate-300">
                    <div class="flex w-1/2 justify-center border-r border-slate-300">      
                            <table class="w-full">
                                    <tr>
                                        <td class="p-2 text-right w-5">IVA</td>
                                        <td class="p-2 text-center w-5"> <%= number_to_currency(@presupuesto.iva, :unit=>@moneda.currency + ' ') %> </td>
                                    </tr>
                                    <tr>
                                        <td class="p-2 text-right w-5">Total del Proyecto</td>
                                        <td class="p-2 text-center w-5"> <%= number_to_currency(@presupuesto.tproyecto, :unit=>@moneda.currency + ' ') %> </td>
                                    </tr>
                            </table>      
                    </div>
                    <div class="flex w-1/2 justify-center">      
                            <table class="w-full">
                                    <tr>
                                        <td class="p-2 text-right w-5">20% Overhead</td>
                                        <td class="p-2 text-center w-5"> <%= number_to_currency(@presupuesto.overhead, :unit=>@moneda.currency + ' ') %> </td>
                                    </tr>
                                    <tr>
                                        <td class="p-2 text-right w-5">10% Estímulos</td>
                                        <td class="p-2 text-center w-5"> <%= number_to_currency(@presupuesto.estimulo, :unit=>@moneda.currency + ' ') %> </td>
                                    </tr>
                            </table>      
                    </div>
                </div>     
            </div>    
            <div class="flex w-full justify-center">
                <div class="w-full">
                    <table class="w-full">
                            <tr>
                                <td class=" p-2 text-center font-semibold">Total para Gastos</td>
                                <td class=" p-2 font-semibold text-center"><%= number_to_currency(@presupuesto.tgastos, :unit=>@moneda.currency + ' ') %></td>
                            </tr>    
                    </table>
                </div>     
            </div>    

            <div class="flex w-full justify-center mt-5">
            <div class="w-3/4">
                    <div class="text-center font-semibold">Desgloce de Gastos</div>   
                </div>    
            </div>

            <%= render 'presupuestos/show_caps' %> 

            <% if @proyecto.etapas.last.tevento.clave == 'CAP' || current_usuario.cuenta.rol.clave == 'EL' || @proyecto.enlaces.last.enevento.clave == 'CORR' %> 
                 <div class="md:flex md:items-center mb-3 justify-end mt-5">
                     <div class="flex">
                        <%= link_to edit_presupuesto_path(@presupuesto.id), 
                                class:'text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center mr-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800' do %>
                                Editar Información
                                <%= inline_svg_tag 'svg/lapiz_white.svg', class:"ml-2" %>
                        <% end %>
                     </div>
                     <%  if session[:step] == 4 %>
                             <%= link_to new_recurso_path, 
                                         "data-turbo-frame":'py_content_action',
                                        class:'text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center mr-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800' do %>
                                        Siguiente
                                        <%= inline_svg_tag 'svg/flecha-peq-der.svg' %>
                             <% end %> 
                     <% end %>
                     <%  if session[:step] == 5 || session[:step] == 6 %>
                             <%= link_to recurso_path(@presupuesto.proyecto.recurso.id), 
                                         "data-turbo-frame":'py_content_action',
                                        class:'text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center mr-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800' do %>
                                        Siguiente
                                        <%= inline_svg_tag 'svg/flecha-peq-der.svg' %>
                             <% end %> 
                     <% end %>
            <% end %>    
</div>