<%= form_with model:@informe, url:[@proyecto, @informe], class:'w-full' do |f| %>
        <%= f.hidden_field :proyecto_id, value:@proyecto.id %>
        <div class="relative overflow-x-auto">
             <table class="w-full text-sm text-right"> 
                   <tr class="bg-white ">
                        <td scope="row" class="p-2 text-right w-1/5 font-semibold ">
                            Tipo informe:
                        </td>
                        <td class="text-left p-2">
                              <%= f.select :tinforme_id, 
                                  Tinforme.all.order(:orden).map{|item| [item.nomtinforme, item.id]},
                                  {prompt:'- Selecciones una opciÃ³n -'},
                                 {class:'p-1 border-b dark:bg-gray-800 dark:border-gray-700'} 
                              %> 
                        </td>
                   </tr>    
                   <tr class="bg-white ">
                        <td scope="row" class="p-2 text-right w-1/5 font-semibold ">
                              Documento:
                        </td>
                        <td class="text-left p-2">
                              <%= f.file_field :dinforme %>
                        </td>
                   </tr>
             </table>  
        </div> 
        <div class="md:flex md:items-center mb-5 justify-end">
                <%= link_to proyecto_informes_path(@proyecto),
                                    class:"mr-3 text-white bg-gray-500 hover:bg-gray-800 focus:ring-4 focus:outline-none focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:bg-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-800",
                                    data: { turbo_frame: "py_content_sub"} do %>  
                                   Cancelar
                <% end %>   
                <button type="submit" class="text-white bg-green-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800" 
                        data-turbo-frame= 'py_content_sub'>
                         Aceptar
                </button>
        </div>       
<% end %> 