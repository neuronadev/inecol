<div class="w-full p-1  bg-white border border-gray-200 rounded-lg shadow sm:p-8 dark:bg-gray-800 dark:border-gray-700">
        <h5 class="mb-1 text-xl font-semibold tracking-tight text-gray-900 dark:text-white">Proyecto</h5>
        <p class="mb-1 font-normal text-gray-500 dark:text-gray-400">Datos Generales</p>
        <table class="table-auto w-full ">
        <tbody>
                <%= render "proyectos/tr", titulo:'Nombre del Proyecto:', valor: @proyecto.nombre  %>
                <%= render "proyectos/tr", titulo:'Objetivo:', valor: @proyecto.objetivo  %>
                <%= render "proyectos/tr", titulo:'Tipo de Proyecto:', valor: @proyecto.clasificacion.nomclasifica %>
                <%= render "proyectos/tr", titulo:'Overhead:', valor: @proyecto.overhead ? 'SI' : 'NO'  %>
                <%= render "proyectos/tr", titulo:'Tipo Medio:', valor: @proyecto.medio.nommedio %>
                <% if @proyecto.medio.clave == 'CONV' %>
                    <%= render "proyectos/tr_condicion", v:'proyectos/lista_convocatoria' %>
                <% end %> 
                <%= render "proyectos/tr", titulo:'Tipo Investigación:', valor: @proyecto.linea.nomlinea %>
                <%= render "proyectos/tr", titulo:'Periodo:', valor: @proyecto.periodo %>
                <%= render "proyectos/tr", titulo:'Interinstitucional:', valor: @proyecto.interinst ? 'SI' : 'NO'  %>
                <% if @proyecto.interinst %>
                    <%= render "proyectos/tr_condicion", v:'proyectos/lista_instituciones' %>
                <% end %>
               
        </tbody>     
        </table>
        <%= render 'proyectos/docs/s_protocolo' %>
        <%= render 'proyectos/docs/s_convenio' %>   
        
        <% if @proyecto.etapas.last.tevento.clave == 'CAP' || current_usuario.cuenta.rol.clave == 'EL' || @proyecto.enlaces.last.enevento.clave == 'CORR' %>
                <div class="md:flex md:items-center mb-3 justify-end mt-5">
                    <%= link_to edit_proyecto_path(@proyecto), 
                            class:'text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center mr-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800' do %>
                        Editar Información
                    <% end %>
                </div>

        <% end %>
</div>        