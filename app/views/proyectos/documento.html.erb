<%= turbo_frame_tag 'py_content_action', class:'w-full' do %>
    <div class="w-full text-slate-700">
        <div class="mt-3 flex align-middle border-b-2 border-slate-200 ">
            <div class="flex w-1/3">
              <div><%= inline_svg_tag 'svg/adoc.svg' %></div>
                <% if @tipo == 'PROT' %>
                     <div class="ml-1">Documentos - Proyocolo</div>
                <% end %>
                <% if @tipo == 'CONV' %>
                     <div class="ml-1">Documentos - Convenio o algun otro documento legal</div>
                <% end %>
            </div>
        </div>
        
        <div class="mt-5">
              <%= turbo_frame_tag 'py_content_secc' do %>
                   <% if @tipo == 'PROT' %>
                        <%= render "doc_prot" %>
                <% end %>
                <% if @tipo == 'CONV' %>
                        <%= render "doc_conv" %>
                <% end %>
                  
             <% end %> 
        </div>
        
        

    </div> 
<% end %>