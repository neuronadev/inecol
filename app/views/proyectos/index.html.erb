<div class="w-full">
    <div class="mt-3 flex align-middle  justify-between">
              <div class="flex"> 
                <div><%= inline_svg_tag 'svg/listaproy.svg' %></div>
                <div class="ml-3 text-slate-700">
                      <%  if @regresar.nil? %>
                           Listado de Proyectos
                      <% end %>     
                      <%  if @regresar == 'origen' %>
                              <% if current_usuario.cuenta.rol.clave == 'PLAN' %> 
                                     Listado de Proyectos <span class="font-semibold"> Evaluados </span>
                               <% else %>
                                      <span class="font-semibold">Listado de Proyectos </span>
                              <% end %>    
                      <% end %>     
                      <%  if @regresar == 'activ' %>
                           Listado de Proyectos <span class="font-semibold">Financiados</span>
                      <% end %>    

               </div>
              </div>  
              <div>
                 <!--  <button type="button" data-controller="correo" data-action="click->correo#enviar" >Enviar</button> -->
              </div>
              <div>
                 <div>   <%= render 'notificacion' %> </div>
              </div>
              <div>  
               <% if current_usuario.cuenta.rol.clave == 'EL' %>
                  <div class="text-slate-700 font-semibold pr-5" data-controller="menuitems">
                        <%= enlaceMenuItem %>
                  </div>
               <% end %>
              </div>

    </div>
  
     <% if current_usuario.cuenta.rol.clave == 'EL' %>
             <%= render 'index_enlace' %>  
     <% elsif current_usuario.cuenta.rol.clave == 'CAP' %> 
              <%= render 'index' %>  
     <% elsif current_usuario.cuenta.rol.clave == 'PLAN' %> 
              <%= render 'index_plan' %>
     <% elsif current_usuario.cuenta.rol.clave == 'DIR' %> 
              <%= render 'index_dir' %>         
     <% else %>         
              <%= render 'index_eval' %>  
     <% end %>

</div>    