<%= form_with url:cplanconv_proyecto_path(@proyecto) do |f| %>
    <div class="flex"> 
         <div>  <%= f.file_field :planconv, class:"p-1 text-sm text-blue-800"  %>  </div>
         <div> 
              <button type="submit" class="text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-lg text-sm px-1 py-1 text-center inline-flex items-center dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800" 
                       data-turbo-frame='plan_conv'>
                            Aceptar
             </button>                  
         </div> 
         <% if controller.action_name == 'eplanconv' %>
             <div class="ml-2">
                <%= link_to planconv_proyecto_path(@proyecto), 
                            class:"mr-3 text-white bg-gray-500 hover:bg-gray-800 focus:ring-4 focus:outline-none focus:ring-gray-300 font-medium rounded-lg text-sm px-1 py-1 text-center inline-flex items-center dark:bg-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-800",
                            data: { turbo_frame: "plan_conv" } do %>  
                             Cancelar
                <% end %>  
              </div>
         <% end %>     
    </div>
<% end %>