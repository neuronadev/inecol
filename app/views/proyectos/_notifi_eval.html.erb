<%
      validacion = @proyecto.validaciones.includes(:tvalidacion).where('tvalidaciones.clave':'SOLV').last
%>

<div class="w-full p-1  bg-white border border-gray-200 rounded-lg shadow sm:p-8 dark:bg-gray-800 dark:border-gray-700">
     <h5 class="mb-1 text-xl font-semibold tracking-tight text-gray-900 dark:text-white">Solicitud de evaluación</h5>
     <p class="mb-1 font-normal text-gray-500 dark:text-gray-400">Informaición de la solicitud</p>

     <table class="table-auto w-full ">
         <tbody>
                   <%= render "proyectos/tr", titulo:'Nombre del Proyecto:', valor: @proyecto.nombre  %>
                   <%= render "proyectos/tr", titulo:'Responsable Técnico:', valor: @proyecto.participante.pacademicos.where(responsable:true).first.academico.persona.ap_nom_prop %>
                   <tr class="">
                        <td class="font-semibold p-2 text-right border-b border-slate-300" style='width:300px;'>Ficha del Proyecto:</td>
                        <td class="p-2 border-b border-slate-300">
                                <%= link_to proyecto_path(@proyecto, format: :pdf), target:'_blank' do %> 
                                        <div class="flex  font-medium text-sm leading-tight ml-3" >
                                              <div> <%= inline_svg_tag 'svg/archivo-pdf.svg' %></div> <div class="ml-2 text-gray-800">Descargar</div>
                                        </div>
                                <% end %>
                        </td>
                   </tr>
                   <%= render "proyectos/tr", titulo:'Fecha de Solicitud:', valor:@proyecto.solicitud.fecha_sol.strftime("%d-%m-%Y") %>
                   <%= render "proyectos/tr", titulo:'Fecha Limite de Evaluación:', valor:@proyecto.solicitud.fecha_lim.strftime("%d-%m-%Y") %>
                   <tr class="">
                        <td class="font-semibold p-2 text-right border-b border-slate-300" style='width:300px;'>Archivo:</td>
                        <td class="p-2 border-b border-slate-300">
                                <% if  validacion.docficha.attached? %>
                                           <%= link_to validacion.docficha.filename, rails_blob_path(validacion.docficha, disposition: 'inline'), class:'text-blue-700', target: :_blank %>
                                <% else %>      
                                            <span class="italic">Sin archivo</span>.
                                <% end %>
                        </td>
                   </tr>
                   <tr class="">
                        <td class="font-semibold p-2 text-right border-b border-slate-300" style='width:300px;'>Comentarios:</td>
                        <td class="p-2 border-b border-slate-300">
                                 <%= validacion.txtval %>
                        </td>
                   </tr>
         </tbody>   
      </table>
</div>      
