<%
      validacion = @proyecto.validaciones.includes(:tvalidacion).where('tvalidaciones.clave':'SOLV').last
%>

<div class="w-full p-1  bg-white border border-gray-200 rounded-lg shadow sm:p-8 dark:bg-gray-800 dark:border-gray-700">
     <h5 class="mb-1 text-xl font-semibold tracking-tight text-gray-900 dark:text-white">Solicitud de evaluación</h5>
     <p class="mb-1 font-normal text-gray-500 dark:text-gray-400">Informaición de la solicitud</p>

     <table class="table-auto w-full ">
         <tbody>
                   <%= render "proyectos/tr", titulo:'Nombre del Proyecto:', valor: @proyecto.nombre  %>
                   <%= render "proyectos/tr", titulo:'Responsable Técnico:', valor: @proyecto.participante.pacademicos.where(responsable:true).first.academico.persona.nom_espacio %>
                   <% if !@proyecto.raiz.nil? 
                          py_ant =  Proyecto.find(@proyecto.raiz)
                   %> 
                            <tr class="">
                                   <td class="font-semibold text-gray-500 p-2 text-right border-b border-slate-300 italic" style='width:300px;'>Ficha Anterior:</td>
                                   <td class="p-2 border-b border-slate-300">
                                             <%= link_to proyecto_path(py_ant, format: :pdf), target:'_blank' do %> 
                                                       <div class="flex  font-medium text-sm leading-tight ml-3" >
                                                            <div> <%= inline_svg_tag 'svg/archivo-pdf.svg' %></div> <div class="ml-2 text-gray-800">Descargar-Ficha anterior</div>
                                                       </div>
                                             <% end %>
                                   </td>
                              </tr>
                   <% end %>

                   <tr class="">
                        <td class="font-semibold p-2 text-right border-b border-slate-300" style='width:300px;'>Ficha Actual:</td>
                        <td class="p-2 border-b border-slate-300">
                                <%= link_to proyecto_path(@proyecto, format: :pdf), target:'_blank' do %> 
                                        <div class="flex  font-medium text-sm leading-tight ml-3" >
                                              <div> <%= inline_svg_tag 'svg/archivo-pdf.svg' %></div> <div class="ml-2 text-gray-800">Descargar-Ficha</div>
                                        </div>
                                <% end %>
                        </td>
                   </tr>
                   <!--  
                     <%= render "proyectos/tr", titulo:'Fecha de Solicitud:', valor:@proyecto.solicitud.fecha_sol.strftime("%d-%m-%Y") %>
                   -->
                   <tr class="">
                        <td class="font-semibold p-2 text-right border-b border-slate-300" style='width:300px;'>Fecha Limite Evaluación:</td>
                        <td class="p-2 border-b border-slate-300">
                             <span class="bg-green-500 p-2 font-semibold"><%= @proyecto.solicitud.fecha_lim.strftime("%d-%m-%Y") %></span>
                             <span class="italic font-semibold text-sm text-red-500">Fecha limite para emitir una evaluación</span>
                        </td>
                   </tr>
                   <tr class="">
                        <td class="font-semibold p-2 text-right border-b border-slate-300" style='width:300px;'>Archivo(s):</td>
                        <td class="p-2 border-b border-slate-300">
                               <% if validacion.dcevaluaciones.attached? %>
                                        <% validacion.dcevaluaciones.each do |doc| %>
                                             <div class="flex"> 
                                                            <%= link_to doc.filename, rails_blob_path(doc, disposition:'inline'), target:'_blank', class:'item_file text-blue-700' %>
                                             </div>
                                        <% end %>
                               <% end %>
                        </td>
                   </tr>
                   <tr class="">
                        <td class="font-semibold p-2 text-right border-b border-slate-300" style='width:300px;'>Mensaje:</td>
                        <td class="p-2 border-b border-slate-300">
                                 <%= validacion.txtval %>
                        </td>
                   </tr>
         </tbody>   
      </table>
</div>      
