<%
      validacion = @proyecto.validaciones.includes(:tvalidacion).where('tvalidaciones.clave':'SOLV').last
%>
<div class="p-5 mb-3 text-sm rounded-lg bg-blue-50 " role="alert">
     <div>
          <div class="flex">
                <div class="font-semibold">Nombre del Proyecto:</div>
                <div class="ml-2"> <%= @proyecto.nombre %> </div>
          </div>
          <div class="flex">
                <div class="font-semibold">Responsable TÃ©cnico:</div>
                <div class="ml-2"> <%= @proyecto.participante.pacademicos.where(responsable:true).first.academico.persona.ap_nom_prop %> </div>
          </div>
          <div class="flex">
                <div class="font-semibold">Ficha del Proyecto:</div>
                <div class="ml-2"> 
                           <%= link_to proyecto_path(@proyecto, format: :pdf), target:'_blank' do %> 
                               <div class="flex  font-medium text-sm leading-tight ml-3" >
                                   <div> <%= inline_svg_tag 'svg/archivo-pdf.svg' %></div> <div class="ml-2 text-gray-800">Descargar</div>
                               </div>
                          <% end %>
                 </div>
          </div>
          
     </div>


     <div class="flex mt-5">
                <div class="font-semibold">Fecha de Solicitud:</div>
                <div class="ml-2"> <%= validacion.created_at.strftime("%d-%m-%Y") %> </div>
          </div>
     <div><span class="font-semibold">Archivo:</span> 
            <% if  validacion.docficha.attached? %>
                <%= link_to validacion.docficha.filename, rails_blob_path(validacion.docficha, disposition: 'inline'), class:'text-blue-700', target: :_blank %>
            <% else %>      
                    No se inlcuyen archivos.
            <% end %>
     </div>  
               

     

     <div class="mt-3"> 
        <%= validacion.txtval %>
     </div>
</div>