<div class="relative overflow-x-auto shadow-md sm:rounded-lg mt-5">
    <table class="w-full text-sm text-left text-gray-700 dark:text-gray-400">
        <thead class="text-sm text-gray-700 bg-gray-200 dark:bg-gray-800 dark:text-gray-400">
            <tr>
                 <th scope="col" class="p-1 text-center">
                    Num. de Registro
                </th>

                <th scope="col" class="p-1 text-center" style="width:50%;">
                    Nombre del Proyecto
                </th>
                <th scope="col" class="p-1 text-center">
                    Fecha Recepci√≥n
                </th>

                <th scope="col" class="p-1 text-center">
                    Responsable
                </th>

                <th scope="col" class="p-1 text-center" style="width:10%;">
                    Estado
                </th>
               
                <th scope="col" class="p-1 text-center">
                    Acciones
                </th>
            </tr>
        </thead>
        <tbody>
             <% if @proyectos.any? %>
                    <%  @proyectos.each do |py| 
                        @resp = py.participante.pacademicos.where(responsable:true).first.academico.persona.nom_espacio
                        item = Item.where(proyecto_id:py.id).first
                        if item.blank?
                    %>
                            <tr class="bg-white border-b dark:bg-gray-900 dark:border-gray-700 box" draggable="true" id="<%= py.id %>" data-action="dragstart->organizar#handleDragStart">
                                 <td style="text-align: center;">
                                       <% if py.enlaces.last.enevento.clave == 'FIR' || py.enlaces.last.enevento.clave == 'DICT' %>
                                              <%= py.dictamen.numregistro %>
                                       <% else %>       
                                           --
                                       <% end %>
                                </td>
                                <th scope="row" class="p-2 font-medium text-gray-900  dark:text-white" style="text-align: justify;">
                                    <%= py.nombre %> </div>
                                </th>
                                <td class="p-2" style="text-align: center;">
                                    <%= py.etapas.includes(:tevento).where('teventos.clave':'REV').first.created_at.strftime("%d-%m-%Y %H:%M ")  %>
                                </td>
                                <td class="p-2">
                                    <%= @resp %>
                                </td>
                               
                                <td class="p-2" style="text-align: center;">
                                    <%= render 'vistas/util/elestado', proyecto:py %>
                                </td>
                                <td class="p-2" style="text-align: center;">
                                    <% if py.etapas.last.tevento.clave == 'CAP' %> 
                                        <%= link_to 'Editar', resumen_vistas_path(:id=>py.id), class:"font-medium text-blue-600 dark:text-blue-500 hover:underline" %> 
                                    <% else %>    
                                        <%= link_to 'Ver', resumen_vistas_path(:id=>py.id), class:"font-medium text-blue-600 dark:text-blue-500 hover:underline",  data:{turbo_frame: 'pycontent'}  %> 
                                    <% end %>                            
                                </td>
                            </tr>
                       <% end %>       
                     <% end %>   
             <% else %>           
                     <tr class="bg-white border-b dark:bg-gray-900 dark:border-gray-700"><td colspan='3' scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">No hay proyectos registrados</td>
            <% end %>            
        </tbody>
    </table>
</div>