                                              <span> <strong>X</strong> </span>
                                           <% end %>
                                   </td>
                                   <td>Por Iniciativa Propia</td>
                                   <td style="width:50px; text-align: center; background-color: #ffffff;">
                                          <% if @proyecto.medio.clave == 'PROP' %>
                                                <span> <strong>X</strong> </span>
                                          <% end %>
                                   </td>
                              </tr>
                    </table>
               </td>
               <td >
                    <table style="border: 1px solid black; border-spacing: 5px;">
                              <tr>
                                   <td>Básico</td>
                                   <td style="width:50px; text-align: center; background-color: #ffffff;">
                                          <% if @proyecto.linea.clave == 'AP' %>
                                                <span> <strong>X</strong> </span>
                                          <% end %>
                                   </td>
                                   <td>Aplicado</td>
                                   <td style="width:50px; text-align: center; background-color: #ffffff;">
                                            <% if @proyecto.linea.clave == 'BA' %>
                                                   <span> <strong>X</strong> </span>
                                          <% end %>
                                   </td>
                              </tr>
                    </table>

               </td>
             </tr>  
          </table>     
     </td>          
     <td>
          <table> 
             <tr> 
                                   <td>Transferencia de Conocimiento </td>
                                   <td style="width:50px; text-align:center; background-color: #ffffff;">
                                            <% if @proyecto.tfconoc %>
                                                <span> <strong>X</strong> </span>
                                          <% end %>
                                   </td>
             </tr> 
             <tr>
                                   <td>Interinstitucional</td>
                                   <td style="width:50px; text-align:center; background-color: #ffffff;">
                                          <% if @proyecto.interinst == 'AP' %>
                                                <span> <strong>X</strong> </span>
                                          <% end %>
                                   </td>
             </tr>  
          </table>     
     </td>
 </tr>
</table>

<table style="width:100%; background-color: #e4e4e4; padding:5px 0;">
    <tr>
        <td style="padding: 5px 0;">Nombre del Proyecto</td>
        <td style="padding: 5px 0; width:85%; background-color: #ffffff;">
                  <%= @proyecto.nombre %>
        </td>
    </tr>
</table>

<table style="width:100%; background-color: #e4e4e4; padding:5px 0;">
    <tr>
        <td style="padding: 5px 0;">Objetivo</td>
        <td style="padding: 5px 0; width:85%; background-color: #ffffff;">
               <%= @proyecto.objetivo %>
        </td>
    </tr>
</table>

<table style="width:100%; background-color: #e4e4e4; padding:5px 0;">
    <tr>
        <td style="padding: 5px 0;">Institución, Gobierno o Empresa</td>
        <td style="padding: 5px 0; width:55%; background-color: #ffffff;">
                 <%= @proyecto.fuente.nomfuente %>
        </td>
       
        <% if @proyecto.fuente.nacionalidad.clave == 'NAC' %>
                         <td style="padding: 5px 0;">Nacional</td>
                         <td style="padding: 5px 0; text-align:center; width:5%; background-color: #ffffff;">
                                   <span> <strong>X</strong> </span>
                         </td>

                         <td style="padding: 5px 0;">Estado</td>
                         <td style="padding: 5px 0; width:10%; background-color: #ffffff;">
                                   <span> <strong>  <%= @proyecto.fuente.lugar.nomlugar %> </strong> </span>
                         </td>
        <% end %>
         <% if @proyecto.fuente.nacionalidad.clave == 'EXT' %>
                         <td style="padding: 5px 0;">Extranjera</td>
                         <td style="padding: 5px 0; text-align:center; width:5%; background-color: #ffffff;">
                                   <span> <strong>X</strong> </span>
                         </td>

                         <td style="padding: 5px 0;">País</td>
                         <td style="padding: 5px 0; width:10%; background-color: #ffffff;">
                                   <span> <strong>  <%= @proyecto.fuente.lugar.nomlugar %> </strong> </span>
                         </td>
        <% end %>
    </tr>
</table>

<table style="width:100%; background-color: #e4e4e4; padding:5px 0;">
    <tr>
        <td style="padding: 5px 0;">Nombre Contacto Contraparte</td>
        <td style="padding: 5px 0; width:50%; background-color: #ffffff;">
                   <span>  <%= @proyecto.fuente.nomcontacto %>  </span>
        </td>

        <td style="padding: 5px 0;">Correo Electrónico</td>
        <td style="padding: 5px 0; width:20%; background-color: #ffffff;">
                 <span>  <%= @proyecto.fuente.emailcontacto %>  </span>
        </td>
    </tr>
</table>


