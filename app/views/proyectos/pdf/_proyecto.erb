                                               <td style="text-align: center;"> <%= acad.porcentaje  %></td>
                                          </tr>    
                                   <% end %>    
                                  
                              </table>
                         </td>   
                    </tr>
                    <tr>
                         <td style="vertical-align: top;">
                              Técnicos
                         </td>   

                         <td style="vertical-align: top;">
                              <table style="width:100%;">
                                   
                                     <% @proyecto.participante.ptecnicos.each do |tec| %>
                                          <tr><td> <%= tec.academico.persona.ap_nom_prop  %> </td>
                                               <td style="text-align: center;"> <%= tec.porcentaje  %></td>
                                          </tr>    
                                   <% end %>     
                                    
                              </table>
