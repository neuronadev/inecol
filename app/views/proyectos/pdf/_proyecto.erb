<table style="width:100%; background-color: #e4e4e4;">
 <tr>
     <td>
          <table> 
            <tr>
              <td > 
                    <table style="border: 1px solid black; border-spacing: 5px;">
                              <tr>   
                                   <td>Por Convocatoria</td>
                                   <td style="width:50px; text-align: center; background-color: #ffffff;">
                                       <% if @proyecto.medio.clave == 'CONV' %>
                                              <span> <strong>X</strong> </span>
                                       <% end %>
                                   </td>
                                   <td >Por Demanda</td>
                                   <td style="width:50px; text-align: center; background-color: #ffffff;">
