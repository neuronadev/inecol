<div style="width:100%; background-color: #e4e4e4; padding:5px 0;">
   <table style=" width:100%; background-color: #e4e4e4; padding:5px 0;">
         <tr>
             <td style="width:15%; font-weight: bold;">Productos Esperados</td>
             <td style="width:75%; background-color: #FFFFFF; border-bottom: 1px solid #a9a9a9;"><%= @proyecto.meta.esperado %></td>
         </tr>
         <tr>
             <td style="width:15%; font-weight: bold;">Impacto</td>
             <td style="width:75%; background-color: #FFFFFF; border-bottom: 1px solid #a9a9a9;"><%= @proyecto.meta.impacto %></td>
         </tr>
   </table>
</div>   

<div style="width:100%; background-color: #e4e4e4; padding:2px 0;">
   <div style="font-weight: bold;">Desglose de Recursos Aportados por el INECOL</div>
   
   <div style="font-weight: bold; margin-top:10px;">Fondos Fiscales</div>
       <table style=" width:100%; background-color: #e4e4e4; padding:5px 0;  border-collapse: collapse;">
            <% @proyecto.recurso.fiscales.each do |fis| %>
                <tr style="background-color: #FFFFFF;">
                    <td style="width:15%; font-weight: bold; padding:5px;"><%= fis.capitulo.nomcapitulo %></td>
                    <td style="width:5%; font-weight: bold; padding:5px; text-align:right;">$</td>
                    <td style="width:10%; font-weight: bold; padding:5px;"><%=  fis.monto %></td>
                </tr>
            <% end %>    
       </table>
   </div>    

    <div style="font-weight: bold; margin-top:10px;">Aportaci√≥n en Especie</div>
       <table style=" width:100%; background-color: #e4e4e4; padding:5px 0;  border-collapse: collapse;">
            <% @proyecto.recurso.especies.each do |esp| %>
                <tr style="background-color: #FFFFFF;">
                    <td style="width:15%; font-weight: bold; padding:5px;"><%= esp.capitulo.nomcapitulo %></td>
                    <td style="width:5%; font-weight: bold; padding:5px; text-align:right;">$</td>
                    <td style="width:10%; font-weight: bold; padding:5px;"><%=  esp.monto %></td>
                </tr>
            <% end %>    
       </table>
   </div>   

   <div style="font-weight: bold; margin-top:10px;">Fondos Concurrentes</div>
       <table style=" width:80%; background-color: #e4e4e4; padding:5px 0;  border-collapse: collapse;">
            <% @proyecto.recurso.concurrentes.each do |con| %>
                <tr style="background-color: #FFFFFF;">
                    <td style="width:15%; font-weight: bold; padding:5px;"><%= con.capitulo.nomcapitulo %></td>
                    <td style="width:5%; font-weight: bold; padding:5px; text-align:right;">$</td>
                    <td style="width:10%; font-weight: bold; padding:5px;"><%=  con.monto %></td>
                </tr>
            <% end %>    
       </table>
   </div>   

</div>   