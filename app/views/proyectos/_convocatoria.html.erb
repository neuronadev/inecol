<%= form.fields_for :mconvocatoria do |f| %>

     <div class="relative z-0 w-1/3 mb-6 group">
            <%= f.text_field :nomconvocatoria,
                  class:"block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 
                         appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer",
                  placeholder:" "       
            %> 
            <%= form.label :nomconvocatoria, 'Nombre de la Convocatoria',
                 class:'peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 
                        transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:left-0 peer-focus:text-blue-600 
                        peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6'
            %>

     </div>
     <div class="relative z-0 w-1/3 mb-6 group">
            <%= f.text_field :link,
                  class:"block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 
                         appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer",
                  placeholder:" "       
            %> 
            <%= form.label :link, 'Link de la Convocatoria',
                 class:'peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 
                        transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:left-0 peer-focus:text-blue-600 
                        peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6'
            %>

     </div>
     <div class="relative z-0 w-2/3 mb-6 group" data-controller="uploadfile">
            
            <%= form.file_field :dconvocatoria, direct_upload: true,
                   data: { uploadfile_target: "input",
                           action: "change->uploadfile#uploadFile" 
                        },
                  class:"block p-2 w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 
                        dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400",
                        'aria-describedby':"user_avatar_help"
            %>
             <div data-uploadfile-target="progress"></div>
            <div class="mt-1 text-sm text-gray-500 dark:text-gray-300" id="user_avatar_help">Opciona. Si tiene un archivo agregelo aqui.</div>
            
     </div>


<% end %>