<%
    sig = true
    p = py
    tmp_py = p
    item_count = 0
    while sig do
        if !Proyecto.where(raiz:tmp_py.id).last.nil?           
            p_item = Proyecto.find(Proyecto.where(raiz:tmp_py.id).last.id)
            tmp_py = p_item
            item_count = item_count + 1
            @resp = tmp_py.participante.pacademicos.where(responsable:true).first.academico.persona.nom_espacio
