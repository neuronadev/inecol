<%= turbo_frame_tag "py_content_sub" do %>
 <div style="display:flex; flex-direction:column;">  
     <div class="mt-3 p-3 font-semibold text-sm w-full" style="display:flex; justify-content: center;">Logros obtenidos</div>
     

     <div class="w-full p-2 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700" style="display: flex; flex-direction:column; justify-content: center; align-items: center;">   
           <div class="w-full" style="display: flex;"> 
                  <% if current_usuario.cuenta.rol.clave == 'PLAN' %>   
                        <%= link_to resumen_vistas_path(:id=>@proyecto.id), data:{turbo_frame: "py_content_sub"} do %>
                              <div class="w-1/2 font-semibold text-blue-800" style="display: flex; align-items: center;">
                                    <div><%= inline_svg_tag 'svg/regresar.svg' %></div>  
                                    <div class="text-sm">Regresar</div>
                              </div>
                        <% end %>  
                  <% end %>      
           </div>  
            <div class="w-9/12 mt-5 p-2 text-sm" style="display: flex; flex-direction:column"> 
                         <div style="display: flex; flex-direction:row p-2">
                               <div class="font-semibold"> Documento finiquito: </div>
                               <div class="ml-3">
                                     <% if @proyecto.dfiniquito.attached? %>
                                                <%= link_to  @proyecto.dfiniquito.filename, rails_blob_path( @proyecto.dfiniquito, disposition:'inline'), target:'_blank', class:'item_file text-blue-700' %>
                                     <% else %>                                                 
                                          <span class="italic">Sin información</span>
                                     <% end %>
                               </div>
                         </div>  
                         <div class="mt-3"  style="display: flex; flex-direction:row">
                               <div class="font-semibold"> Logros alcanzados: </div>
                               <div class="ml-3"> 
                                     <% if @proyecto.dfiniquito.attached? %>
                                             <%= @proyecto.txtlogro %>
                                     <% else %>                                                 
                                          <span class="italic">Sin información</span>
                                     <% end %>
                               </div>
                         </div>  
            </div>
      </div>
 </div>  
<% end %>   