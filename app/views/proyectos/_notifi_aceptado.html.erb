<div class="w-full p-1  bg-white border border-gray-200 rounded-lg shadow sm:p-8 dark:bg-gray-800 dark:border-gray-700">
     <h5 class="mb-1 text-xl font-semibold tracking-tight text-gray-900 dark:text-white">Dictamen</h5>
     <p class="mb-1 font-normal text-gray-500 dark:text-gray-400">Información</p>

     <table class="table-auto w-full ">
         <tbody>
               <%= render "proyectos/tr", titulo:'Nombre del Proyecto:', valor: @proyecto.nombre  %>
               <%= render "proyectos/tr", titulo:'Responsable Técnico:', valor: @proyecto.participante.pacademicos.where(responsable:true).first.academico.persona.nom_espacio %>
               <tr class="">
                      <td class="font-semibold p-2 text-right border-b border-slate-300" style='width:300px;'> Evaluación:</td>
                      <td class="p-2 border-b border-slate-300">
                          <% if @proyecto.dictamen.tvalidacion.clave == 'ACEP' %>
                               <span class="text-green-800 font-semibold p-1 bg-green-300"> <%= @proyecto.dictamen.tvalidacion.nomtvalidacion %> </span>
                          <% end %> 
                          <% if @proyecto.dictamen.tvalidacion.clave == 'REC' %>
                               <span class="text-red-800 font-semibold p-1 bg-red-300"> <%= @proyecto.dictamen.tvalidacion.nomtvalidacion %> </span>
                          <% end %> 
                      </td>
               </tr>
               <%  if @proyecto.etapas.last.tevento.clave == 'ACEP' %>
                   <%= render "proyectos/tr", titulo:'Número de Registro:', valor: @proyecto.dictamen.numregistro  %>
               <% end %>
                <tr class="">
                        <td class="font-semibold p-2 text-right border-b border-slate-300" style='width:300px;'>Documento:</td>
                        <td class="p-2 border-b border-slate-300">
                                <% if  @proyecto.dictamen.docdictamen.attached? %>
                                           <%= link_to @proyecto.dictamen.docdictamen.filename, rails_blob_path(@proyecto.dictamen.docdictamen, disposition: 'inline'), class:'text-blue-700', target: :_blank %>
                                <% else %>      
                                            <span class="italic">Sin archivo</span>.
                                <% end %>
                        </td>
               </tr>
               <tr class="">
                        <td class="font-semibold p-2 text-right border-b border-slate-300" style='width:300px;'>Dictamen:</td>
                        <td class="p-2 border-b border-slate-300">
                                 <%= @proyecto.dictamen.txtdictamen %>
                        </td>
               </tr>
         </tbody>
     </table>    
</div>