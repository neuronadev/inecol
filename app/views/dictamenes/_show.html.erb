
<div class="relative overflow-x-auto flex justify-center">
    <table class="w-3/4 text-left text-gray-800 dark:text-gray-800">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">

                </th>
                <th scope="col" class="px-6 py-3">

                </th>
            </tr>
        </thead>
        <tbody>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                <th scope="row" class="px-6 py-4  text-gray-900 whitespace-nowrap dark:text-white font-semibold">
                    Nombre del Proyecto:
                </th>
                <td class="px-6 py-4">
                    <%= @proyecto.nombre %>
                </td>
            </tr>    
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                <th scope="row" class="px-6 py-4  text-gray-900 whitespace-nowrap dark:text-white font-semibold">
                   Responsable:
                </th>
                <td class="px-6 py-4">
                    <%= @proyecto.participante.pacademicos.where(responsable:true).first.academico.persona.nom_espacio %>
                </td>
            </tr>    
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                <th scope="row" class="px-6 py-4  text-gray-900 whitespace-nowrap dark:text-white font-semibold">
                   Número de Registro:
                </th>
                <td class="px-6 py-4">
                    <%= @dictamen.numregistro %>
                </td>
            </tr>   
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                <th scope="row" class="px-6 py-4  text-gray-900 whitespace-nowrap dark:text-white font-semibold">
                   Fecha Dictamen:
                </th>
                <td class="px-6 py-4">
                    <%= @dictamen.created_at.strftime('%d-%m-%Y') %>
                </td>
            </tr>   
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                <th scope="row" class="px-6 py-4 text-gray-900 whitespace-nowrap dark:text-white font-semibold">
                   Evaluación:
                </th>
                <td class="px-6 py-4">
                     <strong> <%= @dictamen.tvalidacion.nomtvalidacion %> </strong>
                </td>
            </tr>   
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                <th scope="row" class="px-6 py-4 text-gray-900 whitespace-nowrap dark:text-white font-semibold">
                   Documento:
                </th>
                <td class="px-6 py-4">
                         <% if @dictamen.docdictamen.attached? %>
                               <%= link_to @dictamen.docdictamen.filename, rails_blob_path(@dictamen.docdictamen, disposition: 'inline'), class:"text-blue-800", target: :_blank %>
                        <% else %>                     
                                <div class="font-semibold text-gray-600 italic ml-4"> No se incluyó ningún documento.</div>
                        <% end %>
                </td>
            </tr>   
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                <th scope="row" class="px-6 py-4 text-gray-900 whitespace-nowrap dark:text-white font-semibold">
                   Dictamen:
                </th>
                <td class="px-6 py-4">
                    <%= @dictamen.txtdictamen %>
                </td>
            </tr>    

             
           
           
        </tbody>
    </table>
</div>
